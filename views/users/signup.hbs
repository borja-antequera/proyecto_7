<section id="sectionRegistro">
    <div class="wrapper">
        <div class="container-fluid">
            <div class="col-md-6 mx-auto top3em">
                <div class="card">
                    <div class="card-body">
                        {{#if errorUsuario}}
                            <div class="alert alert-warning">{{errorUsuario}}</div>
                        {{/if}}
                        {{#if errorEmail}}
                            <div class="alert alert-warning">{{errorEmail}}</div>
                        {{/if}}
                        <h3 class="userLog"><span class="fas fa-user-plus"></span> Registro de Usuario</h3>
                        <form action="/users/signup" method="post">
                            <div class="form-group">
                                <input type="text" name="nombre" id="nombre" placeholder="Nombre"
                                       class="form-control form-control-sm" required>
                            </div>
                            <div class="form-group">
                                <input type="email" name="email" id="email" placeholder="Email"
                                       class="form-control form-control-sm" required>
                            </div>

                            <div class="form-group">
                                <input type="password" name="password" id="password" placeholder="Password"
                                       class="form-control form-control-sm" required>
                            </div>
                            <div class="form-group">
                                <input type="password" name="password2" id="password2" placeholder="Password"
                                       class="form-control form-control-sm" required>
                            </div>
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-dark btn-sm">Registrarme</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


